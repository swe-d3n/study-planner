{
  "name": "study-planner-pro",
  "version": "1.0.8",
  "description": "A study planner desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win --publish never",
    "build-mac": "electron-builder --mac --publish never",
    "publish-win": "electron-builder --win --publish always",
    "publish-mac": "electron-builder --mac --publish always"
  },
  "keywords": ["study", "planner", "productivity"],
  "author": "Eden Liang",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.studyplanner.app",
    "productName": "Study Planner Pro",
    "publish": {
      "provider": "github",
      "owner": "swe-d3n",
      "repo": "study-planner"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "icon.png"
    ],
    "win": {
    "target": ["nsis"],
    "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true
    },
    "mac": {
      "target": ["dmg"],
      "icon": "icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "icon.png",
      "category": "Utility"
    }
  }
}